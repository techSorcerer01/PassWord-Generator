name: Deploy to GitHub Pages

on:
  # Triggers the workflow on push events to the "master" branch
  push:
    branches:
      - master

  # Allows the workflow to be manually triggered
  workflow_dispatch:

jobs:
  build:
    # Runs on the latest Ubuntu environment
    runs-on: ubuntu-latest

    steps:
      # Checks-out your repository so the workflow can access it
      - uses: actions/checkout@v4

      # Set up Node.js environment (use the latest version of Node.js)
      - name: Setup Node.js
        uses: actions/setup-node@v3
        with:
          node-version: 'lts/*'

      # Install dependencies using npm
      - name: Install Dependencies
        run: npm install

      # Build the Vite app
      - name: Build the Vite app
        run: npm run build

      # Deploy the built app to GitHub Pages
      - name: Deploy to GitHub Pages
        uses: peaceiris/actions-gh-pages@v4
        with:
          github_token: ${{ secrets.GITHUB_TOKEN }}
          publish_dir: ./dist
